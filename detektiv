	cout << "2:" << endl;
	cout << "3:" << endl;
	int b;
	cin >> b;
fabr:
	if (b == 1) {
		cout << "" << endl;
		cout << "Выберите следущее действие:" << endl;
		cout << "1:" << endl;
		cout << "2:" << endl;
		int c;
		cin >> c;
		if (c == 1) {
			cout << "" << endl;
			a = 1;
			goto begin;
		}
		if (c == 2) {
			cout << "" << endl;
			exit;
		}
	}
	if (b == 2) {
		cout << "" << endl;
		goto begin;
	}
	if (b == 3) {
		cout << "" << endl;
